{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": {"url": "https://raw.githubusercontent.com/IshanNandal/FIT3179/master/Data/Merged.csv"},
  "title": "Government Trust over the years",

  "width": "container",
  
  "encoding": {
    
    "x": {
      "timeUnit": "year", 
      "field": "Year",
      "title": "Year",
      "axis": {"tickCount": 5}
    },
    
    "tooltip": [
      {"timeUnit": "year", "field": "Year"},
      {"field": "Country"},
      {"field": "Happiness Score", "type": "quantitative"},
      {"field": "GDP per Capita", "type": "quantitative"}
    ]
  
  },
  
  "layer": [
  {
    "mark": {"type": "point", "color": "red"},
    "encoding": {
      
      "y": {
        "field": "Government Trust", 
        "type": "quantitative",
        "axis": {"tickCount": 5}
      }
    }
  }, 
  
  {
    "mark": "text",
    
    "selection": {
      
      "hover": {
        
        "type": "single", 
        "on": "mouseover", 
        "empty": "none"
      }
    },
    "encoding": {
      "color": {
        "condition":{
          
          "selection": {"not": "hover"}, 
          "value": "transparent"
        }
      }
    }
  }],
  
  "config": {"axisY": {"minExtent": 30}}
}
