{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "Happiness Score vs. GDP per Capita (2015-2019)",
  "description": "An interactive scatter plot of global happiness statistics by country and year.",
  "data": {"url": "https://raw.githubusercontent.com/IshanNandal/FIT3179/master/Data/Merged.csv"},
  "width": 700,
  "height": 500,
  "layer": [
    {
      "transform": [
        {
          "filter": {"selection": "Year"}
        }
      ],
      "mark": {
        "type": "text",
        "fontSize": 100,
        "x": 420,
        "y": 250,
        "opacity": 0.06
      },
      "encoding": {"text": {"field": "Year"}}
    },
    {
      
      "encoding": {
        "x": {
          "field": "GDP per Capita",
          "type": "quantitative",
          "scale": {"domain": [0, 1.8]},
          "axis": {"tickCount": 5, "title": "GDP per Capita"}
        },
        "y": {
          "field": "Happiness Score",
          "type": "quantitative",
          "scale": {"domain": [2, 8]},
          "axis": {"tickCount": 5, "title": "Happiness Score"}
        }
      },
      "layer": [
        {
          "mark": {
            "type": "line",
            "size": 4,
            "color": "lightgray",
            "strokeCap": "round"
          },
          "encoding": {
            "detail": {"field": "Country"},
            "order": {"field": "Year"},
            "opacity": {
              "condition": {
                "test": {
                  "or": [{"selection": "hovered"}, {"selection": "clicked"}]
                },
                "value": 0.8
              },
              "value": 0
            }
          }
        },
        {
          "selection": {
            "Year": {
              "type": "single",
              "fields": ["Year"],
              "bind": {
                "input": "range",
                "min": 2015,
                "max": 2019,
                "step": 1,
                "name": "Year"
              },
              "init": {"Year": 2015}
            },
            "hovered": {
              "type": "single",
              "fields": ["Country"],
              "on": "mouseover",
              "empty": "none"
            },
            "clicked": {"type": "multi", "fields": ["Country"], "empty": "none"}
          },
          
          "transform": [{"filter": {"selection": "Year"}}],
          
          "mark": {
            "type": "circle",
            "size": 100,
            "opacity": 0.9
          }

        },
        {
          "transform": [
            {
              "filter": {
                "and": [
                  {"selection": "Year"},
                  {"or": [{"selection": "clicked"}, {"selection": "hovered"}]}
                ]
              }
            }
          ],
          "mark": {
            "type": "text",
            "yOffset": -12,
            "fontSize": 12,
            "fontWeight": "bold"
          },
          "encoding": {
            "text": {"field": "Country"}
          }
        },
        {
          "transform": [
            {"filter": {"selection": "hovered"}},
            {"filter": {"not": {"selection": "Year"}}}
          ],
          "layer": [
            {
              "mark": {
                "type": "text",
                "yOffset": -12,
                "fontSize": 12,
                "color": "gray"
              },
              "encoding": {"text": {"field": "Year"}}
            },
            {"mark": {"type": "circle", "color": "gray"}}
          ]
        }
      ]
    }
  ]
}
