{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "description": "Drag a rectangular brush to show (first 20) selected points in a table.",
  
  "data": {"url": "https://raw.githubusercontent.com/IshanNandal/FIT3179/master/Data/Merged.csv"},
  
  "transform": [{
    "window": [
      {"op": "row_number", "as": "row_number"}
    ]
  }],
  
  "hconcat": [{
    "selection": {
      "brush": {
        "type": "interval"
      }
    },

    "width": "container",
    "height": 450,

    "mark": "point",

    "encoding": {
      
      "x": {
        "field": "GDP per Capita", 
        "type": "quantitative",
        "scale": {"domain": [0, 2.2]}
      },
      
      "y": {
        "field": "Happiness Score", 
        "type": "quantitative",
        "scale": {"domain": [2.5, 8]}},

      "color": {
        "condition": {
          "selection": "brush", 
          "field": "Life Expectancy", 
          "type": "quantitative"},
        "value": "grey"
      }
    }
  }, {
    "transform": [
      {"filter": {"selection": "brush"}},
      {"window": [{"op": "rank", "as": "rank"}]},
      {"filter": {"field": "rank", "lt": 20}}
    ],
    "hconcat": [{
      "width": 50,
      "title": "GDP per Capita",
      "mark": "text",
      "encoding": {
        "text": {
          "field": "GDP per Capita", 
          "type": "quantitative",
          "format": ".3f"
        },
        "y": {"field": "row_number", "type": "ordinal", "axis": null}
      }
    }, {
      "width": 50,
      "title": "Happiness Score",
      "mark": "text",
      "encoding": {
        "text": {"field": "Happiness Score", "type": "quantitative",
          "format": ".3f"},
        "y": {"field": "row_number", "type": "ordinal", "axis": null}
      }
    }, {
      "width": 50,
      "title": "Government Trust",
      "mark": "text",
      "encoding": {
        "text": {"field": "Government Trust", "type": "quantitative",
          "format": ".3f"},
        "y": {"field": "row_number", "type": "ordinal", "axis": null}
      }
    }]
  }],
  "resolve": {"legend": {"color": "independent"}}
}
